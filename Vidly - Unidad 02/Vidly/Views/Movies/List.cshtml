@model List<Movie>


<h2>Movies</h2>
@if (Model.Count == 0)
{
    <p>We don't have any movies yet.</p>
}

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <th>Movie</th>
        @foreach (var movie in Model)
        {
            <tr>
                <td><a href="@movie.Imdb">@movie.Name</a></td>
            </tr>
        }

    </table>
}