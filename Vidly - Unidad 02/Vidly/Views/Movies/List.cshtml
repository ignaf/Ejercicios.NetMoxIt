@model List<Movie>


<h2>Movies</h2>
@if (Model.Count == 0)
{
    <p>We don't have any movies yet.</p>
}

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <th>Movie</th>
        <th>Genre</th>
        @foreach (var movie in Model)
        {
            <tr>
                <td><a href="~/movies/details/@movie.Id">@movie.Name</a></td>
                <td>@movie.Genre.Name</td>
            </tr>
        }

    </table>
}